<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ff363636"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        android:scrollbarStyle="insideOverlay" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="3.0dip"
            android:background="#ff0076a3"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/textViewWanIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="10.0dip"
            android:paddingLeft="25.0dip"
            android:text="Your WAN IP address is:"
            android:textColor="#ffffa500"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editText5"
                android:layout_width="225.0dip"
                android:layout_height="32.0dip"
                android:layout_marginLeft="10.0dip"
                android:background="@android:color/white"
                android:ems="10"
                android:hint="Host name"
                android:paddingLeft="10.0dip"
                android:tag="editTextHost" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewHostIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35.0dip"
            android:paddingLeft="15.0dip"
            android:paddingTop="5.0dip"
            android:text="Host IP address"
            android:textColor="@android:color/white" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10.0dip" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20.0dip"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="75.0dip"
                    android:layout_height="32.0dip"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:hint="port"
                    android:numeric="integer"
                    android:paddingLeft="5.0dip"
                    android:tag="edtText1"
                    android:textColor="@android:color/black" >

                    <requestFocus />
                </EditText>

                <Button
                    android:id="@+id/button1"
                    android:layout_width="135.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:tag="button1"
                    android:text="test"
                    android:textColor="@android:color/white" />

                <FrameLayout
                    android:layout_width="55.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@android:color/white" />

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        android:layout_width="32.0dip"
                        android:layout_height="32.0dip"
                        android:layout_gravity="center"
                        android:indeterminateBehavior="cycle"
                        android:indeterminateDrawable="@drawable/color_progress2"
                        android:minHeight="32.0dip"
                        android:minWidth="32.0dip"
                        android:visibility="invisible" />
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20.0dip"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="75.0dip"
                    android:layout_height="32.0dip"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:hint="port"
                    android:numeric="integer"
                    android:paddingLeft="5.0dip"
                    android:tag="editText2"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="135.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:tag="button2"
                    android:text="test"
                    android:textColor="@android:color/white" />

                <FrameLayout
                    android:layout_width="55.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Failed!"
                        android:textColor="@android:color/white"
                        android:visibility="invisible" />

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        android:layout_width="32.0dip"
                        android:layout_height="32.0dip"
                        android:layout_gravity="center"
                        android:indeterminateBehavior="cycle"
                        android:indeterminateDrawable="@drawable/color_progress2"
                        android:visibility="invisible" />
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20.0dip"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="75.0dip"
                    android:layout_height="32.0dip"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:hint="port"
                    android:numeric="integer"
                    android:paddingLeft="5.0dip"
                    android:tag="editText3"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="135.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:tag="button3"
                    android:text="test"
                    android:textColor="@android:color/white" />

                <FrameLayout
                    android:layout_width="55.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Failed!"
                        android:textColor="@android:color/white"
                        android:visibility="invisible" />

                    <ProgressBar
                        android:id="@+id/progressBar3"
                        android:layout_width="wrap_content"
                        android:layout_height="32.0dip"
                        android:indeterminateBehavior="cycle"
                        android:indeterminateDrawable="@drawable/color_progress2"
                        android:visibility="invisible" />
                </FrameLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical" >

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="75.0dip"
                    android:layout_height="32.0dip"
                    android:background="@android:color/white"
                    android:ems="10"
                    android:hint="port"
                    android:numeric="integer"
                    android:paddingLeft="10.0dip"
                    android:tag="editText4" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="135.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:tag="button4"
                    android:text="test"
                    android:textColor="@android:color/white" />

                <FrameLayout
                    android:layout_width="55.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="OK!"
                        android:textColor="@android:color/white"
                        android:visibility="invisible" />

                    <ProgressBar
                        android:id="@+id/progressBar4"
                        android:layout_width="wrap_content"
                        android:layout_height="32.0dip"
                        android:indeterminateBehavior="cycle"
                        android:indeterminateDrawable="@drawable/color_progress2"
                        android:visibility="invisible" />
                </FrameLayout>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</ScrollView>